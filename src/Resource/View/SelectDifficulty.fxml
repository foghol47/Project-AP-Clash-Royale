<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SelectDifficultyController">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="700.0" fitWidth="1400.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Pictures/backgrounds/backGround2.jpg" />
                    </image>
                </ImageView>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="345.0" prefWidth="234.0" spacing="10.0" BorderPane.alignment="CENTER">
                            <children>
                        <Label style="-fx-background-color: #2d2323;" text="SELECT DIFFICULTY :" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <padding>
                              <Insets left="4.0" right="4.0" />
                           </padding>
                        </Label>
                                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#startGameIdiotBot" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="IDIOT BOT" />
                                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#startGameSmartBot" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="SMART BOT" />
                                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#startGameIntelligentBot" prefHeight="50.0" prefWidth="200.0" stylesheets="@../Styles/ButtonsStyles.css" text="INTELLIGENT BOT" />
                            </children>
                            <BorderPane.margin>
                                <Insets top="100.0" />
                            </BorderPane.margin>
                        </VBox>
                    </center>
                    <bottom>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="backButton" mnemonicParsing="false" onAction="#returnToUserMenu" prefHeight="20.0" prefWidth="100.0" stylesheets="@../Styles/ButtonsStyles.css" text="BACK">
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </bottom>
                </BorderPane>
            </children>
        </StackPane>
    </center>
</BorderPane>
